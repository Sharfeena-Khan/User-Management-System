<%-include("../layouts/header.ejs")-%>


<section class=" my-auto" style="background-image: url('https://wallpapercave.com/wp/wp2933953.jpg');">
    <div class="container py-5 h-100">
        <div style="margin-left: 1000px;">
            <p class=" text-white-50 mt-5 mb-5  text-center"> <a href="/admin" 
                class="fw-bold text-white  text-center px-3 py-2 card-glow" >Admin-Login here</a></p>
        </div>
        <div class="row d-flex justify-content-center align-items-center h-100">
           
            <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                <div class="card bg-white bg-opacity-25 text-white card-glow" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
                        <div class="m-5 mt-md-4">
                            <p class="text-white-50 mb-5">Please enter your login and password!</p>


                            <form action="/login" method="post">

                                <div class="form-outline form-white  mb-4">
                                    <input type="email" name="email" id="typeEmailX" class="form-control form-control-lg " placeholder="Email" />
                                </div>

                                <div class="form-outline form-white  mb-4">
                                    <input type="password" name="password" id="typePasswordX" class="form-control form-control-lg " placeholder="password" />
                                </div>
                                

                                <br> 
                                
                                 <br>
                              <button class="btn btn-outline-light btn-lg px-5" type="submit" >Login</button> 

                              <div>
                                <br>
                                <div>
              

                                    <%
                                    if(typeof message !== 'undefined'){
                                      %>
                                      <h5 class="text-warning text-center" id="invalidUser-msg"><%= message %></h5>
                                      <%
                                    }
                                    %>
                        
                        
                        
                                    </div>

                                    <p class="text-center text-white-50 mt-5 mb-0">To create New account? <a href="/register" 
                                        class="fw-bold text-warning"><u>Sign-Up</u></a></p>
                      

                                <br> <br>
                                <p class=" "><i> Thank You...! </i> 
                                </p>
                              </div>  



                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<script>
    function userhidemsg(){
 const msg= document.getElementById("invalidUser-msg")
 if(msg){
  setTimeout(()=>{
  msg.style.display = "none"
 }, 4000)
 }
}
window.onload= userhidemsg;
</script>


<%-include("../layouts/footer.ejs")-%>